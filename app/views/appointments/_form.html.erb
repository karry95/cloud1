<%= form_with(model: appointment, local: true) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

 <div class="field">
      <%= form.label :name %>
      <%= form.select :name, options_for_select(Patient.all.map{|name| name.name}), { :include_blank => true, :prompt => 'Select Patient'} %>
    </div>
    
  <div class="field">
    <%= form.label :patient %>
    <%= form.text_field :patient %>
  </div>
  
  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <button><%= link_to 'Back', appointments_path %> </button>
  </div>
<% end %>
